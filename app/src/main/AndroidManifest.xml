<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication"> <!-- Make sure this matches your package name -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MealScale"
        tools:targetApi="31">

        <!--
          STEP 1: YOUR NEW LOGIN ACTIVITY
          This is now the launcher. We use the "Splash" theme
          because it's already set to be full-screen.
        -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MealScale.Splash">

            <!-- STEP 2: MAKE THIS THE LAUNCHER ACTIVITY -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          STEP 3: YOUR MAIN APP ACTIVITY
          This is no longer the launcher.
        -->
        <activity
            android:name=".MainActivity"
            android:exported="false">
            <!-- The launcher intent-filter has been removed -->
        </activity>

    </application>

</manifest>