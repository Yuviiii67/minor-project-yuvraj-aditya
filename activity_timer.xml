<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:gravity="center"
    android:padding="32dp">

    <!-- Step Info -->
    <TextView
        android:id="@+id/stepDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cooking Step"
        android:textSize="18sp"
        android:textColor="@color/textSecondary"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Timer Circle (Visual Representation) -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/timer_circle_background"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor" />

    </LinearLayout>

    <!-- Timer Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/startTimerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/pauseTimerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pause"
            android:textColor="@color/primaryColor"
            android:background="@drawable/button_outline"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/resetTimerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"
            android:textColor="@color/textSecondary"
            android:background="@drawable/button_outline"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Status Message -->
    <TextView
        android:id="@+id/timerStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer ready"
        android:textSize="14sp"
        android:textColor="@color/textHint"
        android:gravity="center" />

</LinearLayout>
