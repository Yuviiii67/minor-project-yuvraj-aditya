<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scale Ingredients"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Ingredient Input Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/card_background">

            <TextView
                android:id="@+id/ingredientNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter available ingredient quantity"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/quantityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter quantity in grams"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/scaleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate Scale"
                android:textColor="@color/white"
                android:background="@drawable/button_rounded" />

        </LinearLayout>

        <!-- Results Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scaled Recipe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter ingredient quantity and click calculate to see scaled recipe"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
